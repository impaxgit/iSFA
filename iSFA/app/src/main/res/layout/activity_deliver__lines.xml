<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeliverOrderLines"
    android:orientation="vertical">


    <TextView
        android:id="@+id/deliverOrderLines_txtDeliverOrderNO"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="0dp"
        android:fontFamily="serif"
        android:text="@string/orderno"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textStyle="bold" />


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/orderLines_wipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ExpandableListView
            android:id="@+id/elv_SalesorderLinesHome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp" />
    </android.support.v4.widget.SwipeRefreshLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/deliverOrder_fbaddOrderLines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/ic__add_black_24dp"
        app:backgroundTint="@color/colorPrimary"
        app:fabSize="normal" />
</LinearLayout>