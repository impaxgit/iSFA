<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/deliverOrderDetails_txtDetailsAmount"
        android:layout_width="94dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="19dp"
        android:fontFamily="serif"
        android:text="@string/amount"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/deliverOrderDetails_txtAmount"
        android:layout_width="112dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/deliverOrderDetails_txtDetailsAmount"
        android:fontFamily="sans-serif"
        android:text="@string/Amount"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <CheckBox
        android:id="@+id/deliverOrder_chkDeliverAll"
        android:layout_width="123dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="251dp"
        android:layout_marginTop="16dp"
        android:text="@string/deliverAll" />

    <Button
        android:id="@+id/deliverOrder_btnLines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deliverOrderDetails_txtDetailsAmount"
        android:layout_alignParentStart="true"
        android:layout_marginStart="296dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="6dp"
        android:text="@string/Lines" />
</RelativeLayout>