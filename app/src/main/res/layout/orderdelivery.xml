<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/columns">


                <TextView
                    android:id="@+id/deliverOrders_txtProductName"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:text="@string/item"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused" />


                <TextView
                    android:id="@+id/deliverOrders_txtQty"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:text="@string/Qty"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused" />

                <TextView
                    android:id="@+id/deliverOrders_txtUnitPrice"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:text="@string/Price"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused" />


                <TextView
                    android:id="@+id/deliverOrders_txtCount"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:text="@string/Count"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused" />

                <TextView
                    android:id="@+id/deliverOrders_txtAmount"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="8dp"
                    android:padding="10dp"
                    android:text="@string/Amount"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused" />

                <TextView
                    android:id="@+id/deliverOrders_txtStatus"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="8dp"
                    android:padding="10dp"
                    android:text="@string/status"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="?android:attr/selectableItemBackground">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvOrdersDelivered"
                    android:layout_width="match_parent"
                    android:layout_height="252dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="50dp"
                    android:clickable="true"
                    android:descendantFocusability="beforeDescendants"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="280dp"
                    android:layout_marginEnd="0dp"
                    android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView17"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="2dp"
                            android:layout_marginBottom="163dp"
                            android:text="@string/totalAmount" />

                        <TextView
                            android:id="@+id/deliverOrders_txtTotalAmount"
                            android:layout_width="206dp"
                            android:layout_height="43dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="50dp"
                            android:layout_marginBottom="148dp"
                            android:background="@color/columns"
                            android:gravity="center"
                            android:textColor="@color/common_google_signin_btn_text_dark_focused" />

                </LinearLayout>

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/deliverOrders_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="401dp"
                    android:clickable="true"
                    android:src="@drawable/pay"
                    app:backgroundTint="@color/colorPrimary" />

        </RelativeLayout>



</LinearLayout>