<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:columnCount="1"
    android:rowCount="9"
    android:columnOrderPreserved="false"
    android:layout_gravity="center"
    android:elevation="20dp"
    tools:context=".CustomerCheckInActivities">

        <android.support.v7.widget.CardView
            android:id="@+id/customer_call_objective"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardElevation="10dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/impax_red"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:fontFamily="serif"
            android:gravity="center_vertical|start">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:gravity="center_vertical|start"
                    android:paddingStart="10dp"
                    android:text="@string/call_Objectives"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="normal|bold"
                    android:typeface="serif" />

            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/customer_check_in_stock_take"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardElevation="10dp"
            app:cardCornerRadius="8dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            app:cardBackgroundColor="@color/impax_red"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:gravity="center_vertical|start"
                    android:paddingStart="10dp"
                    android:text="@string/stock_Take"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="normal|bold"
                    android:typeface="serif" />

            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/customer_check_in_generate_order"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardElevation="10dp"
            app:cardCornerRadius="8dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            app:cardBackgroundColor="@color/impax_red"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:gravity="center_vertical|start"
                    android:paddingStart="10dp"
                    android:text="@string/generate_Order"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="normal|bold"
                    android:typeface="serif" />

            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/customer_check_in_invoice_and_print"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardElevation="10dp"
            app:cardCornerRadius="8dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            app:cardBackgroundColor="@color/impax_red"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:gravity="center_vertical|start"
                    android:paddingStart="10dp"
                    android:text="@string/invoicing"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="normal|bold"
                    android:typeface="serif" />

            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/customer_check_in_delivery"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardElevation="10dp"
            app:cardCornerRadius="8dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            app:cardBackgroundColor="@color/impax_red"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:gravity="center_vertical|start"
                    android:paddingStart="10dp"
                    android:text="@string/deliver_order"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="normal|bold"
                    android:typeface="serif" />

            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/customer_check_in_payment_collection"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardElevation="10dp"
            app:cardCornerRadius="8dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            app:cardBackgroundColor="@color/impax_red"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:gravity="center_vertical|start"
                    android:paddingStart="10dp"
                    android:text="@string/payment"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="normal|bold"
                    android:typeface="serif" />

            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/customer_check_in_merchandise"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardElevation="10dp"
            app:cardCornerRadius="8dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            app:cardBackgroundColor="@color/impax_red"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:gravity="center_vertical|start"
                    android:paddingStart="10dp"
                    android:text="@string/merchandising"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="normal|bold"
                    android:typeface="serif" />

            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/customer_check_in_asset"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardElevation="10dp"
            app:cardCornerRadius="8dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            app:cardBackgroundColor="@color/impax_red"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:gravity="center_vertical|start"
                    android:paddingStart="10dp"
                    android:text="@string/asset_Tracking"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="normal|bold"
                    android:typeface="serif" />

            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/customer_check_in_call_end"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardElevation="10dp"
            app:cardCornerRadius="8dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="15dp"
            app:cardBackgroundColor="@color/impax_red"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:gravity="center_vertical|start"
                    android:paddingStart="10dp"
                    android:text="@string/complete_Call"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="normal|bold"
                    android:typeface="serif" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

</GridLayout>