<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/silver_color">

    <TextView
        android:id="@+id/tv_product_code"
        android:layout_width="154dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="-1dp"
        android:layout_toStartOf="@+id/tv_product_name"
        android:fontFamily="serif"
        android:gravity="center_vertical"
        android:text="@string/showprocode"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="31dp"
        android:fontFamily="serif"
        android:gravity="center_vertical"
        android:text="@string/showproname"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:typeface="serif" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_product_name"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/maxmise" />
</RelativeLayout>
