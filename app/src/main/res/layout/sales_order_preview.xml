<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/preview_content_pane"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/order_preview_header_code"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/place_autocomplete_prediction_secondary_text"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_vertical"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:typeface="monospace" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/order_preview_recycler"
        android:layout_width="match_parent"
        android:layout_height="398dp"
        android:layout_marginTop="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center">


        <ImageView
            android:id="@+id/preview_print_invoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/invoice" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/save" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/visibility_off" />

        <TextView
            android:id="@+id/tv_preview_total"
            android:layout_width="195dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/imageView10"
            android:background="@color/place_autocomplete_prediction_secondary_text"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center_vertical|center"
            android:maxWidth="174dp"
            android:textColor="@color/common_google_signin_btn_text_dark_pressed"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:typeface="monospace" />

    </RelativeLayout>
</LinearLayout>
