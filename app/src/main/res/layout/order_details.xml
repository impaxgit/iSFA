<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/place_autocomplete_search_hint">

    <TextView
        android:id="@+id/orderDetails_txtDetailsAmount"
        android:layout_width="137dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="18dp"
        android:fontFamily="serif"
        android:gravity="center_vertical|end"
        android:text="@string/amount"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/orderDetails_txtAmount"
        android:layout_width="229dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="155dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical|end"
        android:text="@string/Amount"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <Button
        android:id="@+id/generate_btnLines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/orderDetails_txtAmount"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="2dp"
        android:background="@color/common_google_signin_btn_text_dark_pressed"
        android:text="@string/Lines"
        android:textColor="@color/place_autocomplete_prediction_secondary_text"
        android:textStyle="normal|bold"
        android:typeface="monospace" />
</RelativeLayout>